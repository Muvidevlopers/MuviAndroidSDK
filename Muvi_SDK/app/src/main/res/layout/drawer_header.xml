    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:local="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/navlogobackgroundcolor"
            local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            local:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/drawer_liner_height"
                android:background="@color/navlogobackgroundcolor">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drawer_image_height"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_right18dp"
                    android:src="@drawable/logo"
                    />
            </LinearLayout>

        </android.support.v7.widget.Toolbar>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/nav_header_line_color"
            android:layout_below="@+id/toolbar"
            />
    </RelativeLayout>


</FrameLayout>
