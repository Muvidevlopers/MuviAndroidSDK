<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/app_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/transactionHistoryRowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ppv_margin"
        android:background="@color/purchaseBackground"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/transactionDetailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/ppv_margin"
            android:layout_weight="1"
            android:background="@color/purchaseBackgroundColor"
            android:orientation="vertical"
            android:padding="@dimen/transactionDetailLayout_padding">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/transactionTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:paddingLeft="@dimen/login_new_user_padding"
                    android:text="Transaction"
                    android:textColor="@color/purchaseTextColor"
                    android:textSize="@dimen/transcationtitle_text_size" />

                <TextView
                    android:id="@+id/activeAlertTextView"
                    android:layout_width="@dimen/seekbar_progress_width"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/transactionTitleTextView"
                    android:layout_weight="2"
                    android:gravity="center_vertical|right"
                    android:text="Active"
                    android:textColor="@color/purchaseTextColor"
                    android:textSize="@dimen/transcationview_text_size"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/transactionInvoiceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/transactionTitleTextView"
                android:layout_marginTop="@dimen/linear_text_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/transactionInvoiceTitleTextView"
                    android:layout_width="@dimen/seekbar_progress_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.9"
                    android:paddingLeft="@dimen/login_new_user_padding"
                    android:text="Invoice :"
                    android:textColor="@color/purchaseTextColor"
                    android:textSize="@dimen/transcationview_text_size" />


                <TextView
                    android:id="@+id/transactionInvoice"
                    android:layout_width="@dimen/seekbar_progress_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:gravity="center_vertical|left"
                    android:maxLines="1"
                    android:text="$87343876463464656456486664"
                    android:textColor="@color/purchaseTextColor"
                    android:textSize="@dimen/transcationview_text_size" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/transactionOrderLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/transactionInvoiceLayout"
                android:layout_marginTop="@dimen/linear_text_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/transactionOrderTitleTextView"
                    android:layout_width="@dimen/seekbar_progress_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.9"
                    android:paddingLeft="@dimen/login_new_user_padding"
                    android:text="Order Id :"
                    android:textColor="@color/purchaseTextColor"
                    android:textSize="@dimen/transcationview_text_size" />


                <TextView
                    android:id="@+id/transactionOrderTextView"
                    android:layout_width="@dimen/seekbar_progress_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:gravity="center_vertical|left"
                    android:maxLines="1"
                    android:text="sdvbkbkbdtchsdnjdskvnkjnvsdmbjbndjsbnrshwh"
                    android:textColor="@color/purchaseTextColor"
                    android:textSize="@dimen/transcationview_text_size" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/purchaseDateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/transactionOrderLayout"
                android:layout_marginTop="@dimen/linear_text_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/transactionPurchaseDateTitleTextView"
                    android:layout_width="@dimen/seekbar_progress_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.9"
                    android:paddingLeft="@dimen/login_new_user_padding"
                    android:text="Purchase Date :"
                    android:textColor="@color/purchaseTextColor"
                    android:textSize="@dimen/transcationview_text_size" />


                <TextView
                    android:id="@+id/transactionPurchaseDateTextView"
                    android:layout_width="@dimen/seekbar_progress_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ellipsize="end"
                    android:gravity="center_vertical|left"
                    android:maxLines="1"
                    android:text="$873438768832346876532356"
                    android:textColor="@color/purchaseTextColor"
                    android:textSize="@dimen/transcationview_text_size"

                    />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/showPriceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/transactionDetailLayout"
                android:gravity="center"
                android:paddingLeft="@dimen/login_new_user_padding"
                android:text="$299"
                android:textSize="@dimen/transcationshowprice_text_size" />


            <TextView
                android:id="@+id/successTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/transactionDetailLayout"
                android:gravity="center_vertical|left"
                android:text="Successs"
                android:textColor="#737373"
                android:textSize="@dimen/transcationview_text_size" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>