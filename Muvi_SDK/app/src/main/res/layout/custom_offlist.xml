<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/app_background"
    android:orientation="horizontal">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/my_download_margin"
        android:layout_marginRight="@dimen/my_download_margin"
        android:layout_marginTop="@dimen/my_download_margin"
        android:layout_weight="1"
        android:background="@color/episodeBackgroundColor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/cast_width_icon"
            android:layout_height="@dimen/cast_height_icon"
            android:src="@drawable/ic_watch_now" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ppv_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/editTextColor" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textColor="@color/editTextColor"

                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textColor="@color/editTextColor"

                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textColor="@color/editTextColor"

                />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/recylerimg_width"
            android:layout_height="@dimen/recylerimg_height"
            android:layout_gravity="center"
            android:src="@drawable/delete" />

    </LinearLayout>

</LinearLayout>