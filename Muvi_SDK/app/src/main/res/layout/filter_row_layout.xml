<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listviewLay1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal">


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/my_download_margin"
        android:layout_marginLeft="@dimen/loginImageViewMarging_top"
        android:layout_marginTop="@dimen/my_download_margin"
        android:layout_toRightOf="@+id/listCheckBox"
        android:layout_weight="1"
        android:text=""
        android:textColor="@color/textColor"
        android:textSize="@dimen/cast_description_text" />

    <ImageView
        android:id="@+id/listCheckBox"
        android:layout_width="@dimen/listview_img_width"
        android:layout_height="@dimen/listview_img_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/profile_spinner_margin"
        android:layout_marginTop="@dimen/name_user_margin_bottom"
        android:clickable="true"
        android:src="@drawable/ic_radio_button_default" />

</RelativeLayout>