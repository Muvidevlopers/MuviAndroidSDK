<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/my_download_margin"
        android:layout_marginLeft="@dimen/ppv_margin"
        android:layout_marginRight="@dimen/ppv_margin"
        android:layout_marginTop="@dimen/my_download_margin"
        android:background="@color/transparent"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/castTitleLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/main_padding">

            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="hfgfgf"
                android:textColor="@color/pageTitleColor"
                android:textSize="@dimen/review_text_size"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/customRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/sectionTitle"
                android:layout_below="@+id/sectionTitle"
                android:layout_marginTop="@dimen/ppv_margin"
                android:clickable="false"
                android:focusable="false"
                android:visibility="visible" />

            <TextView
                android:id="@+id/userreviewTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/textColor_margin"
                android:ellipsize="marquee"
                android:gravity="center_vertical"
                android:maxLines="10"
                android:lines="2"
                android:inputType="textMultiLine"
                android:text="jhhhhh"
                android:textColor="@color/pageTitleColor"
                android:textSize="@dimen/user_review_textsize" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/border_line_height"
                android:layout_marginTop="@dimen/ppv_margin"
                android:background="@color/com_facebook_likeboxcountview_border_color" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>