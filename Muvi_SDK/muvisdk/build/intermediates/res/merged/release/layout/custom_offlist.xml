<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/my_download_margin"
    app:cardBackgroundColor="@color/episodeBackgroundColor"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/my_download_margin"
        android:layout_weight="1"
        android:background="@color/episodeBackgroundColor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:gravity="center_vertical"
            android:layout_width="@dimen/cast_width_icon"
            android:layout_height="@dimen/cast_height_icon"
            android:src="@drawable/ic_watch_now" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ppv_margin"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/editTextColor" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textColor="@color/editTextColor"

                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textColor="@color/editTextColor"

                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:textColor="@color/editTextColor"

                />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/recylerimg_width"
            android:layout_height="@dimen/recylerimg_height"
            android:layout_gravity="center"
            android:src="@drawable/delete" />

    </LinearLayout>

</android.support.v7.widget.CardView>